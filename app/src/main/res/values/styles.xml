<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">#FFF</item>
    </style>

    <style name="DialogFragmentTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">#000</item>

        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="ThemeMaterial" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">#FFF</item>
        <item name="switchStyle">@style/SwitchCompatStyle</item>

    </style>



    <style name="ThemeMaterial.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.MaterialCardView</item>
    </style>

    <style name="SwitchCompatStyle" parent="@style/Widget.AppCompat.CompoundButton.Switch" >
        <item name="thumbTint">@color/gradient_start_color</item>
        <item name="trackTint">@color/gradient_start_color</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.MaterialCardView" parent="">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


    <!--Style buttons-->
    <style name="ButtonLogin" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="iconPadding">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonLoginNew" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">2dp</item>
        <item name="cornerRadius">14dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="tint">@color/white</item>
        <item name="iconTint">@color/white</item>

    </style>


    <style name="ButtonLoginNewColor" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">2dp</item>
        <item name="cornerRadius">14dp</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="tint">@color/white</item>
        <item name="iconTint">@color/white</item>

    </style>


    <style name="ButtonCreateAccount" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">14dp</item>
        <item name="iconPadding">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>


    <style name="ButonCreateGroup" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
        <item name="iconPadding">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>



    <style name="ButtonActionsOrderDriver" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">18dp</item>
    </style>

    <style name="ButonView" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>


    <style name="ButonAdd" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">2dp</item>
        <item name="iconTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>






    <style name="ButonCustomNormal" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="ButonCustomDanger" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="ButonClose" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
        <item name="iconPadding">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>


    <style name="FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="enforceMaterialTheme">true</item>
        <item name="ensureMinTouchTargetSize">true</item>
        <item name="tint">@color/white</item>

    </style>

    <style name="FloatingActionButtonCreate" parent="Widget.Design.FloatingActionButton">
        <item name="enforceMaterialTheme">true</item>
        <item name="ensureMinTouchTargetSize">true</item>
        <item name="tint">@null</item>

    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#546DFE</item>
        <item name="hintTextColor">#546DFE</item>
        <item name="android:textSize">16dp</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>


    <style name="SpinnerLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#546DFE</item>
        <item name="hintTextColor">#546DFE</item>
        <item name="android:textSize">6sp</item>
        <item name="boxStrokeWidth">2dp</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
