<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="15.4dp"
                tools:ignore="RtlSymmetry">

                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="57.6dp"
                    android:layout_height="57.6dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="5dip"
                    app:riv_border_width="2dip"
                    app:riv_border_color="#ffffff"
                    android:layout_marginTop="16.3dp"
                    android:id="@+id/image"
                    android:src="@drawable/fast_logo"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16.3dp"
                    android:layout_marginStart="14.4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14.4sp"
                        android:textColor="#262628"
                        android:id="@+id/title"
                        android:text="@string/notification_title"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:textSize="14.4sp"
                        android:textColor="#4a4a4a"
                        android:id="@+id/message"
                        android:text="@string/notification_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11.5dp"
                        android:id="@+id/time"
                        android:textColor="#9b9b9b"
                        android:text="@string/time_ago"
                        android:layout_marginBottom="13.5dp"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5f5f5"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>