<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroundNone"
    android:layout_height="match_parent">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="270dp">


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    app:titleTextColor="@color/white"
                    android:translationZ="99dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />




                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/imageProduct"
                    android:src="@drawable/fast_logo"
                    android:contentDescription="@string/icon" />






            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:background="@color/white"
                android:layout_marginTop="-30dp"
                android:layout_marginBottom="5dp"
                app:cardElevation="4dp"
                style="@style/MaterialCardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:paddingStart="13.4dp"
                        tools:ignore="RtlSymmetry">

                        <lunainc.com.mx.fastdelivery.customfonts.MyTextView_Roboto_Regular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/name_product"
                            android:id="@+id/nameProduct"
                            android:textColor="#262628"
                            android:textSize="20sp" />

                        <lunainc.com.mx.fastdelivery.customfonts.MyTextView_Roboto_Regular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:id="@+id/priceProduct"
                            android:text="@string/price_product"
                            android:textColor="#9b9b9b"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">



                            <lunainc.com.mx.fastdelivery.customfonts.MyTextView_Roboto_Regular
                                android:id="@+id/categoryPartner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/categoria_y_partner"
                                android:textColor="#9b9b9b"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="27dp"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <lunainc.com.mx.fastdelivery.customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/size_shoppingcart"
                                    android:textColor="#c2c4ca"
                                    android:textSize="14sp" />



                            </LinearLayout>




                            <LinearLayout
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="15dp"
                                android:gravity="center"
                                >




                                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                                    android:layout_width="120dp"
                                    android:layout_height="40dp"
                                    android:textColor="#fff"
                                    android:background="@color/colorAccent"
                                    app:textSize="5sp"
                                    app:initialNumber="1"
                                    app:finalNumber="50"
                                    android:id="@+id/btnNumberProduct"
                                    tools:ignore="SmallSp" />

                            </LinearLayout>
                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/containerOptionIngredientes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17dp"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="70dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <lunainc.com.mx.fastdelivery.customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/mod_ingredints"
                                    android:textColor="#c2c4ca"
                                    android:textSize="14sp" />

                                <lunainc.com.mx.fastdelivery.customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/add_alter_product"
                                    android:textColor="#c2c4ca"
                                    android:textSize="14sp"
                                    />



                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="120dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="15dp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    >




                                    <Button
                                        android:text="@string/alter"
                                        android:layout_width="120dp"
                                        android:layout_height="50dp"
                                        android:textColor="#fff"
                                        android:background="@color/colorAccent"
                                        android:textSize="14sp"
                                        android:id="@+id/btnEditIngre"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:layout_width="120dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="15dp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    >




                                    <Button
                                        android:text="@string/add_ingredients"
                                        android:layout_width="120dp"
                                        android:layout_height="50dp"
                                        android:textColor="#fff"
                                        android:background="@color/colorAccent"
                                        android:textSize="14sp"
                                        android:id="@+id/btnAddIngredients"/>


                                </LinearLayout>


                            </LinearLayout>



                        </LinearLayout>


                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#f5f5f5"
                        android:padding="6dp" />


                    <lunainc.com.mx.fastdelivery.customfonts.MyTextView_Roboto_Regular
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textSize="16.7sp"
                        android:textColor="#c1c5c6"/>
                    <lunainc.com.mx.fastdelivery.customfonts.MyTextView_Roboto_Regular
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/descriptionProduct"
                        android:text="@string/lorem"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="15dp"
                        android:textSize="16.7sp"
                        android:textColor="#000000"/>



                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>












































        </LinearLayout>

    </androidx.core.widget.NestedScrollView>





    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        style="@style/ButonAdd"
        android:id="@+id/btnAddPedido"
        app:icon="@drawable/ic_carrito"
        android:text="@string/add_to_my_shoppingcart"
        android:textColor="#ffffff"
        android:textSize="15sp"/>








</RelativeLayout>